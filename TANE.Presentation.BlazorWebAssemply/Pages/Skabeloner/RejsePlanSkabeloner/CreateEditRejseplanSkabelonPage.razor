@using TANE.Presentation.BlazorWebAssemply.Pages.Skabeloner.RejsePlanSkabeloner.Components

@page "/skabeloner/rejseplan/edit/{Id:int}"
@page "/skabeloner/rejseplan/create"

<AuthorizeView>
    <Authorized>
        @if (Id == 0)
        {
            <PageTitle>Opret Ny Rejseplan Skabelon</PageTitle>
            <h3>Opret ny rejseplan skabelon</h3>
        }
        else
        {
            <PageTitle>Rediger Rejseplan Skabelon</PageTitle>
            <h3>Rediger rejseplan skabelon</h3>
        }

        <CreateEditRejseplanSkabelonComponent Id="Id" />
    </Authorized>
    <NotAuthorized>
        <PageTitle>Adgang nægtet</PageTitle>
        <h3>Adgang nægtet</h3>
        <p>Du har ikke adgang til denne side.</p>
    </NotAuthorized>
</AuthorizeView>



@code {
    [Parameter]
    public int Id { get; set; }
}