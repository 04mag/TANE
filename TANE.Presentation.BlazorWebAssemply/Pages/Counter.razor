@page "/counter"

@* Eksempel på authorisation af en hel side *@
@attribute [Authorize]

<PageTitle>Counter</PageTitle>

<TokenHandler />

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<RadzenButton Shade="Shade.Lighter" Click="@ButtonClicked" Text="Primary" ButtonStyle="ButtonStyle.Primary"></RadzenButton>

@code {
    private int currentCount = 0;

    void ButtonClicked()
    {
        currentCount++;
    }
}